package com.heo.intro01;

public class IntroMain {
	
	public static void main(String[] args) {
		int=7;
		if(number % 2 ==0) {
			System.out.println("짝수");
		}else {
			System.out.println("홀수");
		}
		
		if(number < 0) {
			System.out.println("음수");
		}else {
			System.out.println("양수");
		}
	}
 
}
